{% extends 'base.html.twig' %}

{% block title %}Mes bijoux{% endblock %}

{% block body %}

    <h1 class="text-center">Mes bijoux</h1>


<div class="container-fluid">
    <div class="row">
    {% for product in products %}
        <div class=" card col-md-4">
            <div class="product-item text-center">
                <a href="{{ path('product', { 'slug' : product.slug }) }}"> <img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                <h5>{{ product.name }}</h5>
                <span>{{ product.subtitle }}</span>
                <hr>
                <span>{{ (product.price/ 100)|number_format(2, ',', '.') }} â‚¬</span>


            </div>

        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}
